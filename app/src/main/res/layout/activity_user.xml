<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.besafe.UserActivity"
    android:orientation="vertical"
    android:background="@color/back">
    <ImageView
        android:id="@+id/imagevieww"
        android:layout_width="230dp"
        android:layout_height="200dp"
        android:src="@drawable/manager"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="60dp"/>
    <LinearLayout
        android:id="@+id/li"
        android:layout_below="@id/imagevieww"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/txtUname"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/provideshape"
            android:fontFamily="casual"
            android:gravity="center"
            android:hint="ادخل اسمك كامل"
            android:inputType="textPersonName"
            android:textColor="#af1616" />

        <EditText
            android:id="@+id/txtUaddress"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/provideshape"
            android:fontFamily="casual"
            android:gravity="center"
            android:hint="ادخل العنوان"
            android:inputType="textEmailAddress"
            android:textColor="#af1616" />
        <EditText
            android:id="@+id/txtUemail"
            android:layout_width="330dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/provideshape"
            android:fontFamily="casual"
            android:gravity="center"
            android:hint="ادخل البريد الالكتروني"
            android:inputType="textEmailAddress"
            android:textColor="#af1616" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        >

        <ImageView
            android:id="@+id/btnUreg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/house" />
    </LinearLayout>
</RelativeLayout>