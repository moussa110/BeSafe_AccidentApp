<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="55dp"
        android:background="@color/reddark"
        android:gravity="center"
        android:orientation="vertical" />



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="111dp"
        android:layout_height="104dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/warning" />

    <TextView
        android:id="@+id/textcontactmain"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تحذير"
        android:padding="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:typeface="serif"
        android:textSize="28dp"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:textColor="@color/white"
        android:layout_width="300dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text=" بعد عشر ثواني سيقوم التطبيق بارسال رسالة تحذير ال جهات الاتصال الخاصة بك ليبلغهم بموقعك الحالي.."
        android:padding="5dp"
        android:typeface="serif"
        android:textSize="20dp"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:textColor="@color/yellow"
        android:layout_above="@+id/cancel"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5sp" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="135sp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="13dp"
        android:background="@color/white"
        android:onClick="cancelAlarm"
        android:text="الغاء الارسال"
        android:textColor="@color/asphalt" />

</RelativeLayout>