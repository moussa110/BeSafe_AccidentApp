<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.besafe.LoginActivity"
    android:orientation="vertical"
    android:background="@color/back">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="240dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/call" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/imageView2"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="قم بادخال رقم الهاتف"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:textColor="@color/asphalt"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etextlogphone"
            android:layout_width="270dp"
            android:layout_height="55dp"
            android:layout_margin="25dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textColorHint="@color/silver"
            android:background="@drawable/provideshape"
            android:gravity="center"
            android:inputType="phone"
            android:fontFamily="casual"
            android:hint="رقم الهاتف"
            android:textColor="@color/reddark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        >

        <ImageView
            android:id="@+id/btnlogphone"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/next" />
    </LinearLayout>
</RelativeLayout>